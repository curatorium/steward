dev() {
  apt git
  apt shellcheck
}

docker() {
  key docker https://download.docker.com/linux/ubuntu/gpg
  src docker https://download.docker.com/linux/ubuntu $VERSION_CODENAME stable
  apt docker-ce-cli;
  apt docker-compose-plugin;
  apt docker-buildx-plugin;
  defer <<<"usermod -aG docker $USER"
}

runtime() {
  apt bash
  apt curl
  apt gpg
}
