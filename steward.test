beta()  { steward:apt pkg-beta; }
STEW
	(cd "$SRC_DIR" && ./steward --dry-run "$tmpfile") >/dev/null 2>&1 || { rm -f "$tmpfile"; return 1; };
	rm -f "$tmpfile";
	grep -q "pkg-alpha" /tmp/steward/packages || return 1;
	grep -q "pkg-beta" /tmp/steward/packages || return 1;
}

