	cat "$tmpfile" | (cd "$SRC_DIR" && ./steward --dry-run) >/dev/null 2>&1 || return 1;
	rm -f "$tmpfile";
	grep -q "pkg-from-pipe" /tmp/steward/packages || return 1;
